<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/dish_grid_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dish_grid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/dish_grid_image"
        android:background="@color/translucent"
        android:gravity="center"
        android:paddingBottom="5.0dp"
        android:paddingTop="5.0dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/dish_grid_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dish_grid_image"
        android:layout_alignTop="@id/dish_grid_image"
        android:src="@android:drawable/ic_menu_delete" />

</RelativeLayout>